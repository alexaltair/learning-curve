<h1>Search Results</h1>

<% unless @answerResults.empty? %>
  <h2>Answers</h2>
  <ul>
    <% @answerResults.each do |answer| %>
      <li>
        <iframe src="http://www.youtube.com/embed/<%= answer.video %>"></iframe>
      </li>
      <li><%= answer.caption %></li>
    <% end %>
  </ul>
<% end %>

<% unless @questionResults.empty? %>
  <h2>Questions</h2>
  <ul>
    <% @questionResults.each do |question| %>
      <li>
        <a class="submitted_questions" href='/questions/<%= question.id %>'><%= question.title %></a>
      </li>
    <% end %>
  </ul>
<% end %>

<% unless @lessonResults.empty? %>
  <h2>Lessons</h2>
  <ul>
    <% @lessonResults.each do |lesson| %>
      <li>
        <iframe src="http://www.youtube.com/embed/<%= lesson.video %>"></iframe>
      </li>
      <li>
        <%= lesson.title %>
      </li>
    <% end %>
  </ul>
<% end %>

