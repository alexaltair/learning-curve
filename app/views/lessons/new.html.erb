
<h3>POST A LESSON!</h3>
<%= form_for @lesson, :url => upload_new_lesson_path do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :description %>
  <%= f.text_area :description, :rows => "10" %>
  <%= f.submit class: "post"%>
  <%= link_to "<< Back", :back, class: "back" %>
<% end %>

