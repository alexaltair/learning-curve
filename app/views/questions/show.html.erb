<h2><%= @question.title %></h2>
<p><%= @question.description %></p>

<h3><%= pluralize(@question.answers.count, 'Answer') %></h3>
<% @question.answers.each do |answer| %>
  <% if answer.video.nil?  %>
    <h3>No Answers posted yet.  Be the first!</h3>
  <% else %>
  <li>
    <%= render partial: 'votes', locals: {:votable => answer} %>
    <iframe src="http://www.youtube.com/embed/<%= answer.video %>"></iframe>
    <p><%= answer.caption %></p>
  </li>
  <% end %>
<% end %>

<% if user_signed_in? %>
  <%= form_for @answer, :url => upload_new_answer_path do |f| -%>
  <%= f.label "Answer" %>
  <%= f.text_field :caption, :class => 'text_field' %>
  <%= f.hidden_field :question_id %>
  <%= button_tag "Step 2" %>
  <%= link_to t("Cancel"), questions_path, :class => "text_button_padding link_button" %>
  <% end -%>
<% else %>
  <h3>Please sign in to post an answer.</h3>
<% end %>
