<h2><%= @question.title%></h2>
<p><%= @question.description %></p>

<% @question.answers.each do |answer| %>
  <% unless answer.video.nil?  %>
    <li>
      <%= render partial: 'votes', locals: {:votable => answer} %>
      <iframe src="http://www.youtube.com/embed/<%= answer.video %>"></iframe>
    </li>
   <% end %>
<% end %>


<%= form_for @answer, :url => upload_new_answer_path do |f| -%>
  <%= f.label "Answer" %>
  <%= f.text_field :caption, :class => 'text_field' %>
  <%= f.hidden_field :question %>
  <%= button_tag "Step 2" %>
  <%= link_to t(:default => "Cancel"), answers_path %>
<% end -%>