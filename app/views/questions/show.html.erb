<div class="question">
  <h2 class="question"><%= @question.title.upcase%></h2>
  <div class="vote"></div>
    <p><%= @question.description %></p>
    <div class="user_box">
      <div class="avatar"></div>
     <a href="/profiles/<%= @user.id %>"><%= @user.email %></a>
    </div>
</div>


<ul class="answers">
  <% @question.answers.each do |videos| %>
    <% unless videos.video.nil?  %>
      <div class="answer">
        <div class="vote"></div>
        <div class="user_box">
          <div class="avatar"></div>
          <a href="/profiles/<%= videos.user.id %>"><%= videos.user.email %></a>
        </div>
        <li><iframe src="http://www.youtube.com/embed/<%= videos.video %>"></iframe></li>
        <p class="caption"><%= videos.caption %></p>

      </div>
      </end>
     <% end %>
  <% end %>
</ul>

<% if user_signed_in? %>
  <%= form_for @answer, :url => upload_new_answer_path do |f| -%>
    <%= f.label "Answer" %>
    <%= f.text_field :caption, :class => 'text_field' %>
    <%= f.hidden_field :question_id %>
    <%= button_tag "Step 2" %>
    <%= link_to t("Cancel"), questions_path, :class => "text_button_padding link_button" %>
  <% end -%>
<% else %>
  <h3>Please sign in to post an answer.</h3>
<% end %>
